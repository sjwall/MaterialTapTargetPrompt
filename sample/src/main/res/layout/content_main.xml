<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uk.co.samuelwall.materialtaptargetprompt.sample.MainActivity"
    tools:showIn="@layout/app_bar_main">
<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="@dimen/example_button_width"
                android:text="@string/example_navigation_title"
                android:onClick="showSideNavigationPrompt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/example_navigation_description"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/example_item_top_padding">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="@dimen/example_button_width"
                android:text="@string/example_overflow_title"
                android:onClick="showOverflowPrompt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/example_overflow_description"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/example_item_top_padding">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="@dimen/example_button_width"
            android:text="@string/example_search_title"
            android:onClick="showSearchPrompt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/example_search_description"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/example_item_top_padding">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="@dimen/example_button_width"
            android:text="@string/example_fab_title"
            android:onClick="showFabPrompt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/example_fab_description"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/example_item_top_padding">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="@dimen/example_button_width"
            android:text="@string/example_action_mode_title"
            android:onClick="showActionModePrompt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/example_action_mode_description"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/example_item_top_padding">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="@dimen/example_button_width"
                android:text="@string/example_style_title"
                android:onClick="showStylePrompt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/example_style_description"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/example_item_top_padding">
        <Button
                android:id="@+id/button_no_auto_dismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="@dimen/example_button_width"
                android:text="@string/example_no_auto_dismiss_title"
                android:onClick="showNoAutoDismiss"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/example_no_auto_dismiss_description"/>
    </LinearLayout>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <LinearLayout
            android:id="@+id/other_examples_activity"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/example_item_top_padding">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="@dimen/example_button_width"
                android:text="@string/example_activity_title"
                android:onClick="showActivity"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/example_activity_description"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/other_examples_dialog"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/example_item_top_padding">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="@dimen/example_button_width"
                android:text="@string/example_dialog_title"
                android:onClick="showDialog"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/example_dialog_description"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>
